{
  "models": {
    "shipping": {
      "name": "Prédiction de Livraison",
      "type": "regression",
      "file": "models/shipping/model.joblib",
      "features_file": "models/shipping/features.json",
      "description": "Prédit le temps de livraison en jours basé sur la distance, poids, et autres caractéristiques",
      "metrics": {
        "r2_score": 0.85,
        "mae": 2.5,
        "rmse": 3.2
      }
    },
    "sentiment": {
      "name": "Analyse de Sentiment",
      "type": "classification",
      "file": "models/sentiment/model.joblib",
      "features_file": "models/sentiment/features.json",
      "description": "Classifie les avis clients en positif/neutre/négatif",
      "metrics": {
        "accuracy": 0.805,
        "f1_macro": 0.67,
        "f1_weighted": 0.81
      }
    },
    "orders": {
      "name": "Prédiction de Commandes",
      "type": "regression",
      "file": "models/orders/model.joblib",
      "features_file": "models/orders/features.json",
      "description": "Prédit le nombre de commandes par produit et par mois",
      "metrics": {
        "r2_score": 0.91,
        "mae": 2.3,
        "rmse": 3.1
      }
    },
    "clustering": {
      "name": "Recommandation (Clustering)",
      "type": "clustering",
      "file": "models/clustering/model.joblib",
      "features_file": "models/clustering/features.json",
      "description": "Recommande des produits basés sur la similarité et le comportement d'achat",
      "metrics": {
        "silhouette_score": 0.0,
        "n_clusters": 0
      }
    }
  },
  "data_paths": {
    "products": "../Data/olist_products_dataset.csv",
    "orders": "../Data/olist_orders_dataset.csv",
    "order_items": "../Data/olist_order_items_dataset.csv",
    "customers": "../Data/olist_customers_dataset.csv",
    "sellers": "../Data/olist_sellers_dataset.csv",
    "reviews": "../Data/olist_order_reviews_dataset.csv",
    "payments": "../Data/olist_order_payments_dataset.csv",
    "geolocation": "../Data/olist_geolocation_dataset.csv",
    "category_translation": "../Data/product_category_name_translation.csv"
  },
  "app_settings": {
    "products_per_page": 12,
    "recommendations_count": 4,
    "default_language": "fr",
    "cache_ttl_seconds": 3600,
    "theme": {
      "primary_color": "#009739",
      "secondary_color": "#FEDD00",
      "accent_color": "#002776"
    }
  },
  "model_settings": {
    "sentiment": {
      "threshold_positive": 0.61,
      "threshold_negative": 0.39
    }
  }
}